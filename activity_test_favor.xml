<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/activity_background"
    tools:context=".TestFavorActivity">

    <!-- 상단 ActionBar -->
    <LinearLayout
        android:id="@+id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:gravity="center_vertical" >

        <!-- 홈 화살표 -->
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingHorizontal="4dp"
            android:src="@drawable/ic_arrow_back_24"
            app:tint="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- 타이틀 텍스트 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingHorizontal="8dp"
            android:singleLine="true"
            android:text="위성영상"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_video_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/favor_video_height">

            <androidx.media3.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/favor_video_height"
                android:layout_gravity="center"
                app:show_buffering="always"
                app:show_subtitle_button="true"
                app:use_controller="false" />

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone" />

            <LinearLayout android:id="@+id/ll_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/favor_video_height"
                android:visibility="gone"
                android:gravity="center">
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/colorPrimary"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_select_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="CCTV를 선택하세요"
                android:textSize="15sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvCopyRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lvFavor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_weight="1">
    </ListView>

    <LinearLayout
        android:id="@+id/llRegFavor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/favor_on"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_regfavor"/>
    </LinearLayout>


    <!-- 광고 -->
    <LinearLayout
        android:id="@+id/ll_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fl_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
